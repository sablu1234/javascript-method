// Explicit Binding - call , apply, bind
//call funciton a kono parameter sata use


//  the call method

function greeting(){
    console.log(`Hello, ${this.name} belongs to ${this.address}`);
}

const user = {
    name: 'Tapascript',
    address: 'All of you'
}

greeting.call(user);//Hello, Tapascript belongs to All of you



////////////////////////////
jodi call function a kono parameter thake 

const likes = function(hobby1, hobby2){
    console.log(this.name + 'likes '+ hobby1 + ' , '+ hobby2);
}

const person = {
    name: "Tapas",
}

likes.call(person,"Teaching", "Blogging");//Tapaslikes Teaching , Blogging
